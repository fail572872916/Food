<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_backgranod1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="60px"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/magin_10"
                android:scaleType="fitCenter"
                android:background="@drawable/shape_gradient"
android:layout_gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="clip_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_small"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
              android:layout_weight="4"
                android:layout_margin="10dp"
            android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/tv_small_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
android:layout_weight="1"
android:layout_gravity="center"
                android:textSize="@dimen/textSize_13"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.food.lmln.food.view.ScrollGridView

            android:id="@+id/gd_frgment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:padding="5dp"
            android:verticalSpacing="1dp"></com.food.lmln.food.view.ScrollGridView>

    </LinearLayout>


</LinearLayout>